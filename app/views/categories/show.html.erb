<div id="product-index-container">
  <% if @children.present? %>
    <% @children.each_slice(4) do |c4| %>
      <div class="row">
        <%= render partial:"category", collection: c4, as: :category %>
      </div>
    <% end %>
  <% end %>
  <div class="row" id="products">
    <div class="col-xs-12">
      <%= render "partials/pagination" %>
      <%= render 'partials/tool' %>
    </div>
    <%= render @products, rowCount: session[:rowCount].to_i %>
    <div class="col-xs-12 text-center">
      <%= render "partials/pagination" %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("img").lazyload();
  })
</script>