<div id="product-index-container">
  <div id="last-page"><%= last_page %></div>
  <div id="next-page"><%= next_page(@total_page) %></div>
  <% if @children.present? %>
    <% @children.each_slice(4) do |c4| %>
      <div class="row">
        <%= render partial:"category", collection: c4, as: :category %>
      </div>
    <% end %>
  <% end %>
  <div class="row" id="products">
    <%= render 'partials/tool', position: "top" %>
    <%= render @products, rowCount: params[:rowCount].to_i %>
    <%= render 'partials/tool', position: "bottom" %>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("img").lazyload();
  })
</script>