<div class="clearfix" id="cart_items_in_carts">
<% @cart_items.map do |item| %>
  <div class="col-xs-12">
    <%= form_for item, url: cart_item_path(item.id) do |f| %>
    <div class="col-xs-3 col-sm-3">
      <%= link_to item.product do %>
        <%= image_tag item.product.attachments.first.image.url, class: "img100" %>
      <% end %>
    </div>
    <div class="col-xs-9 col-sm-4">
      <%= link_to item.name, item.product %><br>
      <%= item.price %> x
      <%= f.number_field :quantity, { style: "width: 60px; margin: 10px 0px;", max: 999 } %><br>
      <div class="no-space">
      <%= f.submit "更新", class: "btn btn-primary", style: "width: 33.33%;" %>
      <%= link_to "下次再買", root_path, class: "btn btn-link", style: "width: 33.33%;" %>
      <%= link_to "刪除", cart_item_path(item), class: "btn btn-link", style: "width: 33.33%;", method: :delete, data: { confirm: "從購物車移除#{item.name}？" } %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
</div>