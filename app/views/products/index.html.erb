<div id="product-index-container">
  <div class="row">
    <% if @children.present? %>
      <% @children.map do |category| %>
        <%= link_to products_path(category_id: category.id) do %>
          <div class="col-xs-2 category-card">
            <%= image_tag "https://unsplash.it/300?random", style: "width: 100%; height: 100%;", alt: category.jp_name %>
            <h5 class="category-name"><%= category.jp_name %></h5>
            <%= category.zh_name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <%= render "products", products: @products %>
  </div>
</div>